<div class="flex-grow flex flex-col items-center justify-center px-4 pt-20 pb-16">
  
  <!-- Hero Section -->
  <div class="text-center mb-24 max-w-4xl">
    <div class="inline-block mb-4 px-3 py-1 rounded-full border border-purple-500/30 bg-purple-900/20 text-purple-300 text-sm font-semibold tracking-wide shadow-[0_0_15px_rgba(168,85,247,0.3)]">
      New Experience
    </div>
    <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight mb-6 bg-clip-text text-transparent bg-gradient-to-r from-purple-400 via-pink-400 to-indigo-400 drop-shadow-[0_0_25px_rgba(236,72,153,0.5)]">
      Feel Every Beat,<br/>See Every Breath
    </h1>
    <p class="text-xl text-slate-300 mb-10 max-w-2xl mx-auto leading-relaxed">
      Watch your favorite artists come alive. Synchronized lyrics, breathing animations, and dynamic highlights for the ultimate listening journey.
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <%= link_to "Start Free Trial", player_path, class: "px-8 py-4 rounded-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-500 hover:to-pink-500 text-white font-bold text-lg shadow-[0_0_30px_rgba(219,39,119,0.7)] transition-all hover:scale-105" %>
      <%= link_to "Login Demo", login_path, class: "px-8 py-4 rounded-full bg-slate-800/80 hover:bg-slate-700 border border-slate-600 text-white font-bold text-lg transition-all" %>
    </div>
  </div>

  <!-- Subscription Pricing -->
  <div class="w-full max-w-6xl mx-auto relative z-10">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-400">Choose Your Voyage</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 px-4">
      
      <!-- Free Tier -->
      <div class="bg-slate-900/50 backdrop-blur-md border border-slate-700 rounded-3xl p-8 hover:bg-slate-800/80 transition-all">
        <h3 class="text-2xl font-semibold mb-2 text-slate-300">Explorer</h3>
        <div class="text-4xl font-bold mb-6 text-white">Free</div>
        <ul class="space-y-4 mb-8 text-slate-400">
          <li class="flex items-center gap-2">✓ Basic Lyrics Sync</li>
          <li class="flex items-center gap-2">✓ Standard Audio Quality</li>
          <li class="flex items-center gap-2">✓ Ads Supported</li>
        </ul>
        <button class="w-full py-3 rounded-xl border border-slate-600 hover:border-slate-400 transition-colors">Select Plan</button>
      </div>

      <!-- $10 Tier -->
      <div class="bg-indigo-950/40 backdrop-blur-md border-2 border-indigo-500/50 rounded-3xl p-8 transform md:-translate-y-4 shadow-[0_0_40px_rgba(99,102,241,0.2)] hover:shadow-[0_0_60px_rgba(99,102,241,0.4)] transition-all relative overflow-hidden">
        <div class="absolute top-0 right-0 bg-indigo-500 text-white text-xs font-bold px-3 py-1 rounded-bl-lg">POPULAR</div>
        <h3 class="text-2xl font-semibold mb-2 text-indigo-300">Voyager</h3>
        <div class="text-4xl font-bold mb-1 text-white">$10<span class="text-lg text-indigo-400 font-normal">/mo</span></div>
        <p class="text-indigo-400/80 text-sm mb-6">For daily listeners</p>
        <ul class="space-y-4 mb-8 text-indigo-100">
          <li class="flex items-center gap-2">✓ Ad-free Experience</li>
          <li class="flex items-center gap-2">✓ High Quality Audio</li>
          <li class="flex items-center gap-2">✓ Basic Artist Highlights</li>
        </ul>
        <button class="w-full py-3 rounded-xl bg-indigo-600 hover:bg-indigo-500 text-white font-semibold transition-colors shadow-[0_0_20px_rgba(79,70,229,0.5)]">Select Voyager</button>
      </div>

      <!-- $30 Tier -->
      <div class="bg-fuchsia-950/40 backdrop-blur-md border-2 border-fuchsia-500/30 rounded-3xl p-8 relative overflow-hidden group hover:border-fuchsia-400/50 transition-all">
        <div class="absolute -right-20 -top-20 w-40 h-40 bg-fuchsia-500 rounded-full blur-[80px] opacity-30 group-hover:opacity-60 transition-opacity"></div>
        <h3 class="text-2xl font-semibold mb-2 text-fuchsia-300">Creator</h3>
        <div class="text-4xl font-bold mb-1 text-white">$30<span class="text-lg text-fuchsia-400 font-normal">/mo</span></div>
        <p class="text-fuchsia-400/80 text-sm mb-6">The ultimate live experience</p>
        <ul class="space-y-4 mb-8 text-fuchsia-100">
          <li class="flex items-center gap-2 flex-wrap">✓ Everything in Voyager</li>
          <li class="flex items-center gap-2">
            <span class="text-fuchsia-400 animate-pulse text-xl">✦</span>
            <strong>AI AI Live Motions</strong>
          </li>
          <li class="flex items-center gap-2">✓ Custom Timing Editor</li>
        </ul>
        <button class="w-full py-3 rounded-xl bg-gradient-to-r from-fuchsia-600 to-purple-600 hover:from-fuchsia-500 hover:to-purple-500 text-white font-semibold transition-colors shadow-[0_0_20px_rgba(192,38,211,0.5)]">Join Creator</button>
      </div>

    </div>
  </div>
</div>
