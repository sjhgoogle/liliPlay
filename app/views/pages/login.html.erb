<div class="flex-grow flex items-center justify-center p-4">
  <div class="w-full max-w-md bg-slate-900/50 backdrop-blur-xl border border-slate-700/50 rounded-3xl p-8 lg:p-12 shadow-[0_0_50px_rgba(0,0,0,0.5)] relative overflow-hidden">
    
    <!-- Neon glow effect -->
    <div class="absolute -top-10 -right-10 w-32 h-32 bg-fuchsia-600/30 rounded-full blur-[50px] pointer-events-none"></div>
    <div class="absolute -bottom-10 -left-10 w-32 h-32 bg-blue-600/30 rounded-full blur-[50px] pointer-events-none"></div>

    <div class="relative z-10">
      <div class="text-center mb-10">
        <h2 class="text-3xl font-bold text-white mb-2">Welcome Back</h2>
        <p class="text-slate-400">Sign in to continue your voyage</p>
      </div>

      <div class="space-y-4">
        <!-- Google OAuth Mock -->
        <button class="w-full flex items-center justify-center gap-3 bg-white hover:bg-slate-100 text-slate-800 font-semibold py-3 px-4 rounded-xl transition-all shadow-sm">
          <svg class="w-5 h-5" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Continue with Google
        </button>

        <!-- Kakao OAuth Mock -->
        <button class="w-full flex items-center justify-center gap-3 bg-[#FEE500] hover:bg-[#FEE500]/90 text-black/85 font-semibold py-3 px-4 rounded-xl transition-all shadow-sm">
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <!-- Simplified Kakao Bubble -->
            <path d="M12 3C6.48 3 2 6.58 2 11c0 2.84 1.85 5.32 4.67 6.74-.2.72-1.33 4.29-1.36 4.41-.04.16.1.28.24.2.14-.07 3.32-2.22 4.68-3.19.58.05 1.17.08 1.77.08 5.52 0 10-3.58 10-8s-4.48-8-10-8z"/>
          </svg>
          Continue with Kakao
        </button>
      </div>

      <div class="mt-8 relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-700"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-slate-900 text-slate-500">Or continue with</span>
        </div>
      </div>

      <!-- Email fallback -->
      <form class="mt-8 space-y-4">
        <div>
          <label class="block text-sm font-medium text-slate-400 mb-1">Email</label>
          <input type="email" class="w-full bg-slate-800 border border-slate-700 rounded-xl px-4 py-3 text-white placeholder-slate-500 focus:outline-none focus:border-fuchsia-500 focus:ring-1 focus:ring-fuchsia-500 transition-all" placeholder="you@example.com">
        </div>
        <button type="button" class="w-full bg-gradient-to-r from-fuchsia-600 to-indigo-600 hover:from-fuchsia-500 hover:to-indigo-500 text-white font-bold py-3 px-4 rounded-xl transition-all shadow-[0_0_15px_rgba(168,85,247,0.4)]">
          Sign In
        </button>
      </form>

      <div class="mt-6 text-center text-sm text-slate-400">
        Don't have an account? <a href="#" class="text-fuchsia-400 hover:text-fuchsia-300 font-medium">Sign up</a>
      </div>

    </div>
  </div>
</div>
